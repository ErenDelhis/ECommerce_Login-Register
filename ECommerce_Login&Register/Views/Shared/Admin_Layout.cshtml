    <!-- Template Main CSS File -->
    <link href="/Content/NiceAdmin/assets/css/style.css" rel="stylesheet">


</head>
<body>


    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="/Home/Index" class="logo d-flex align-items-center">
                <span class="d-none d-lg-block">Home</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div><!-- End Search Bar -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->
                <li class="nav-item dropdown pe-3">
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="@Session["Fotos"]" class="rounded-circle" alt="">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@Session["AdminNames"] </span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@Session["AdminNames"] </h6>
                            <span>@Session["Roles"] </span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/Admins/Index">
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/AdminCRT/Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Sign Out</span>
                            </a>
                        </li>
                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->
            </ul>
        </nav><!-- End Icons Navigation -->
    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">
            @{
                if (Session["Roles"].ToString() == "Admin")
                {

                    <li class="nav-item">
                        <a class="nav-link " href="/AdminCRT/Enter">
                            <i class="bi bi-grid"></i>
                            <span>Dashboard</span>
                        </a>
                    </li><!-- End Dashboard Nav -->
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link " href="/UserCRT/Enter">
                            <i class="bi bi-grid"></i>
                            <span>Dashboard</span>
                        </a>
                    </li><!-- End Dashboard Nav -->
                }
            }

            <li class="nav-heading">Pages</li>
            @{
                if (Session["Roles"].ToString() == "Admin")
                {
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/AdminCRT/Index">
                            <i class="fa-solid fa-user-gear"></i>
                            <span>Admin</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/ProductCRT/Index">
                            <i class="fa-solid fa-dollar-sign"></i>
                            <span>Product</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/BalanceCRT/Index">
                            <i class="fa-solid fa-coins"></i>
                            <span>Balance</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/UserCRT/Index">
                            <i class="fa-solid fa-user"></i>
                            <span>User</span>
                        </a>
                    </li>
                    <li class="nav-heading">Web Pages</li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Banners/Index">
                            <i class="fa-solid fa-image"></i>
                            <span>Banner</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Clients/Index">
                            <i class="fa-solid fa-building"></i>
                            <span>Clients</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Quotes/Index">
                            <i class="fa-solid fa-quote-left"></i>
                            <span>Quotes</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Categories/Index">
                            <i class="fa-solid fa-list"></i>
                            <span>Categories</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Footers/Index">
                            <i class="fa-solid fa-socks"></i>
