                        </a>
                    </li>

                }
                else if (Session["Roles"].ToString() == "Editor")
                {

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/ProductCRT/Index">
                            <i class="fa-solid fa-dollar-sign"></i>
                            <span>Product</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/BalanceCRT/Index">
                            <i class="fa-solid fa-coins"></i>
                            <span>Balance</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/UserCRT/Index">
                            <i class="fa-solid fa-user"></i>
                            <span>User</span>
                        </a>
                    </li>
                    <li class="nav-heading">Web Pages</li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Banners/Index">
                            <i class="fa-solid fa-image"></i>
                            <span>Banner</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Clients/Index">
                            <i class="fa-solid fa-building"></i>
                            <span>Clients</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Quotes/Index">
                            <i class="fa-solid fa-quote-left"></i>
                            <span>Quotes</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/BalanceCRT/Index">
                            <i class="fa-solid fa-coins"></i>
                            <span>Balance</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/UserCRT/Index">
                            <i class="fa-solid fa-user"></i>
                            <span>User</span>
                        </a>
                    </li>
                    <li class="nav-heading">Web Pages</li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Banners/Index">
                            <i class="fa-solid fa-image"></i>
                            <span>Banner</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Clients/Index">
                            <i class="fa-solid fa-building"></i>
                            <span>Clients</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/Quotes/Index">
                            <i class="fa-solid fa-quote-left"></i>
                            <span>Quotes</span>
