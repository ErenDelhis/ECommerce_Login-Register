@model IEnumerable<ECommerce_Login_Register.Models.Admin>

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Form Layouts</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Your Account</h5>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <table class="table table-hover">
        <tr>
            <th>
                <p>
                    Id
                </p>
            </th>
            <th>
                <p>
                    Foto
                </p>
            </th>
            <th>
                <p>
                    Name
                </p>
            </th>
            <th>
                <p>
                    Mail
                </p>
            </th>
            <th>
                <p>
                    Role
                </p>
            </th>
            <th></th>
        </tr>

        @{
            string AdminMail = Session["Mails"]?.ToString(); // Kullanıcının giriş yaptığı kullanıcı adı ya da benzeri bir bilgi
            var admins = Model.Where(m => m.Mail == AdminMail).ToList();
        }

        @foreach (var item in admins)
        {
            if (admins.Count > 0)
            {
                <tr>

                    <td>
                        @item.Id
                    </td>
                    <td>
                        <img src="@item.Foto" alt="Alternate Text" style="height:100px; width:100px; border-radius:5px;" />
                    </td>
                    <td>
                        @item.AdminName
                    </td>
                    <td>
                        @item.Mail
                    </td>
                    <td>
                        @item.Role
                    </td>
                    <td>
                        <a class="ri-repeat-line btn btn btn-secondary" href="/Admins/Edit/@item.Id"></a>
                    </td>
                </tr>
            }
        }

    </table>
</main>

